{
    "name": "vinkius-labs/markovable",
    "description": "Markovable",
    "keywords": [
        "laravel"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Renato Marinho",
            "email": "renato.marinho@gitscrum.com"
        }
    ],
    "require": {
        "php": "^8.2 || ^8.3",
        "illuminate/support": "^10.0 || ^11.0 || ^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5 || ^11.0",
        "orchestra/testbench": "^10.6.0",
        "squizlabs/php_codesniffer": "^3.6",
        "mockery/mockery": "^1.6",
        "laravel/pint": "^1.25"
    },
    "autoload": {
        "psr-4": {
            "VinkiusLabs\\Markovable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VinkiusLabs\\Markovable\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "VinkiusLabs\\Markovable\\ServiceProvider"
            ]
        }
    }
}
